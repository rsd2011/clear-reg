{
  "name": "clear-reg-frontend",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "fuser -k 3000/tcp 2>/dev/null; nuxt dev",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type:check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:unit": "vitest --project unit",
    "test:nuxt": "vitest --project nuxt",
    "test:coverage": "vitest --coverage"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,mjs,cjs}": [
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@nuxt/content": "^3.8.2",
    "@nuxt/eslint": "^1.10.0",
    "@nuxt/fonts": "^0.12.1",
    "@nuxt/icon": "^2.1.0",
    "@nuxt/image": "^2.0.0",
    "@nuxt/scripts": "^0.13.0",
    "@nuxt/test-utils": "^3.20.1",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.3",
    "@primeuix/themes": "^2.0.0",
    "@unhead/vue": "^2.0.19",
    "@vee-validate/zod": "^4.15.1",
    "better-sqlite3": "^12.4.6",
    "dayjs": "^1.11.19",
    "dockview-vue": "^4.11.0",
    "eslint": "^9.39.1",
    "nuxt": "^4.2.1",
    "pinia": "^3.0.4",
    "primevue": "^4.4.1",
    "realgrid-vue": "^0.9.6",
    "tailwindcss-primeui": "^0.6.1",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@primevue/nuxt-module": "^4.4.1",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.5"
  }
}
